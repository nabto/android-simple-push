<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.nabto.simplepush.ui.view_model.DeviceViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="settings"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification Settings"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notifications"
            android:orientation="vertical">

            <Switch
                android:id="@+id/alarm_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onCheckedChanged='@{(switch, state) -> viewModel.notificationCategoriesChanged(switch, "Alarm", state)}'
                android:checked="@{viewModel.notificationAlarmState}"
                android:text="Alarms" />

            <Switch
                android:id="@+id/warn_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onCheckedChanged='@{(switch, state) -> viewModel.notificationCategoriesChanged(switch, "Warn", state)}'
                android:checked="@{viewModel.notificationWarningState}"
                android:text="Alarms" />

            <Switch
                android:id="@+id/info_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onCheckedChanged='@{(switch, state) -> viewModel.notificationCategoriesChanged(switch, "Info", state)}'
                android:checked="@{viewModel.notificationInfoState}"
                android:text="Info" />
        </LinearLayout>

        <include
            android:id="@+id/llProgressBar"
            android:visibility="@{viewModel.user == null ? View.VISIBLE : View.GONE }"
            layout="@layout/loading"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>